<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal" >

<ImageView
android:id="@+id/lumenImageView"
android:layout_alignParentLeft="true"
android:layout_centerVertical="true"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="3dp"
android:src="@drawable/smart_lumen" 
/>

<TextView
android:id="@+id/lumentTextView"
android:layout_toRightOf="@+id/lumenImageView"
android:layout_centerVertical="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:typeface="monospace"
android:textSize="15dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginRight="5dp"
/>

<ImageView
android:id="@+id/temperatureImageView"
android:layout_toRightOf="@+id/lumentTextView"
android:layout_centerVertical="true"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="3dp"
android:src="@drawable/smart_temperature" 
/>

<TextView
android:id="@+id/temperatureTextView"
android:layout_toRightOf="@+id/temperatureImageView"
android:layout_centerVertical="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:typeface="monospace"
android:textSize="15dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginRight="5dp"
/>

<ImageView
android:id="@+id/humidityImageView"
android:layout_toRightOf="@+id/temperatureTextView"
android:layout_centerVertical="true"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="3dp"
android:src="@drawable/smart_humidity" 
/>

<TextView
android:id="@+id/humidityTextView"
android:layout_toRightOf="@+id/humidityImageView"
android:layout_centerVertical="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:typeface="monospace"
android:textSize="15dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginRight="5dp"
/>

<ImageView
android:id="@+id/pressureImageView"
android:layout_toRightOf="@+id/humidityTextView"
android:layout_centerVertical="true"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="3dp"
android:src="@drawable/smart_pressure" 
/>

<TextView
android:id="@+id/pressureTextView"
android:layout_toRightOf="@+id/pressureImageView"
android:layout_centerVertical="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:typeface="monospace"
android:textSize="15dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginRight="5dp"
/>

<ImageView
android:id="@+id/co2ImageView"
android:layout_toLeftOf="@+id/co2TextView"
android:layout_centerVertical="true"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="3dp"
android:src="@drawable/smart_co2" 
/>

<TextView
android:id="@+id/co2TextView"
android:layout_alignParentRight="true"
android:layout_centerVertical="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:typeface="monospace"
android:textSize="15dp"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginRight="5dp"
/>

</RelativeLayout>
